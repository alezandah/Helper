<h1 style="text-align: center">These are the current Campaigns, Choose anyone to Help</h1>
<div class="greaty">
  <div class="row">
    <% @campaigns.each do |campaign| %>
        <div class="col-md-4">
          <div class="great">
            <div class="img">
              <%= link_to campaign.title, campaign %>
              <%= image_tag campaign.image_url(:thumb).to_s %>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>
<%= link_to 'Back', campaign_index_path, :class => "btn btn-primary" %>