<h1>Listing campaigns</h1>
<div class="container">
  <div class="row">
    <% @campaigns.each do |campaign| %>
        <div class="col-md-4">
          <%= image_tag campaign.image_url(:thumb).to_s %><br>
          <%= link_to campaign.title, campaign %>
        </div>
    <% end %>
  </div>
</div>
<p><%= link_to "Add Campaign", new_campaign_path %></p>